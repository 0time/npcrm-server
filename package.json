    "test:unit": "NODE_ENV=unit nyc mocha"
  },
  "dependencies": {
    "@0ti.me/tiny-pfp": "^0.1.6",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0"
  },
  "devDependencies": {
    "@0ti.me/test-deps": "^0.1.14"
  },
  "repository": "git@gitlab.com:0ti.me/npcrm-server",
  "private": false
}
