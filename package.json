{
  "name": "npcrm-server",
  "version": "0.1.0",
  "description": "The server implementation of the npcrm project",
  "license": "GPL-3.0",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint .",
    "run-coveralls": "NODE_ENV=unit nyc report --reporter=text-lcov | coveralls",
    "start": "node src/index.js",
